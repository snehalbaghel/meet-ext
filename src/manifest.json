{
  "name": "OSlash Task",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": [
    "identity",
    "*://www.googleapis.com/*",
    "*://accounts.google.com/*"
  ],
  "web_accessible_resources": [
    "content.styles.css",
    "icon-128.png",
    "icon-34.png"
  ],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://apis.google.com 'unsafe-eval'; object-src 'self'"
}